<%- include('partials/header') %>
<div class="row">
    <div class="col-lg-8 offset-lg-2 col-md-8 offset-md-2 col-sm-8 offset-sm-2 col-xl-8 offset-xl-2 col-xs-8 offset-xs-8">

        <h4>Add a new task</h4>

        <form method="post" action="/tasks">
            <div class="form-floating mb-2" style="border-radius: 10px;">
                <input id="title" class="form-control" type="text"
                <% if(formData.title && formData.title.value) { %>
                       value="<%- formData.title.value%>"
                        <% } %>

                       name="title" placeholder="Enter the title" required>
                <label for="title">Enter the title</label>
            </div>
            <% if(formData.title && !formData.title.valid) { %>
                <div class="text-danger mt-1 ms-2">
                    <small><%- formData.title.errorMsg%></small>
                </div>
            <% } %>
            <div class="form-floating mb-2" style="border-radius: 10px;">
                <input id="description" class="form-control" type="text"
                <% if(formData.description && formData.description.value) { %>
                       value="<%- formData.description.value%>"
                        <% } %>
                       name="description" placeholder="Enter the description" required>
                <label for="description">Enter the description</label>
            </div>
            <% if(formData.description && !formData.description.valid) { %>
                <div class="text-danger mt-1 ms-2">
                    <small><%- formData.description.errorMsg%></small>
                </div>
            <% } %>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Add task</button>
            </div>
        </form>
    </div>
</div>
<%- include('partials/footer') %>